extend index.pug 
block content 
    include nav.pug
    .container-fluid.text-wite.py-5(style="background: url('https://appco.themetags.com/img/footer-bg.png')no-repeat center center / cover;height:480px;")
        .container.py-3
            .row
                .col-8 
                    h5.display-6.text-light(style="font-size:80px;font-family:Nunito;") Skill Hai! To Future Hai!
                    p.lead.text-light.mt-3.fs-4 "CWS is an on-demand marketplace for top Programming engineers, developers, consultants, architects, programmers, and tutors. Get your projects built by vetted web programming freelancers or learn from expert mentors with team training & coaching experiences in Project based training."
                .col-3
                    img(src="./image/ss.svg", alt="" style="height:390px;width:500px")
        .container.mt-5 
            .row
                .col-3
                    .card.shadow.body.border-0 
                        .card-body
                            h3.ps-2(style="border-left:6px solid #32393f") Our Courses
            .row.mt-5 
                each val in courses
                    .col-lg-2.col-sm-6.mb-3
                        a(href=`/singleCourse/${val._id}`) 
                            .card(style="height:270px")
                                .card-body 
                                    .card.border.text-center.shadow-lg.h-100
                                        //- img(src=`./image/ss.svg`, alt="" style="height:100px;").card-img-top.shadow-lg.img-fluid
                                        img(src=`/../image/${val.image}`, alt="" style="height:100px;").card-img-top.shadow-lg.img-fluid
                                        .card-body.p-2.pb-0.mb-0(style="height:80px")
                                            h3.h6.mb-0=val.title
                                        .card-footer
                                            h3.btn.btn-primary.fs-bold.mb-0.small.px-1.py-0 Duration:Months   
                                                strong=val.duration 
    include footer.pug                 