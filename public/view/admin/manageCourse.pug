extend base.pug
block content 
    .container
        .row
            .col-5
                a.border.border-1.my-1.btn(href="/admin/insert-course").fs-3.text-light Insert Course 
        .row
            .col-10  
                .card.border-white.border-3
                    .card-body 
                        table.table 
                            tr 
                                th Name
                                th Duration
                                th Instructor
                                th Fee
                                th Description
                                th category
                                th Action
                            each val in courses 
                                tr 
                                    td=val.title
                                    td=`${val.duration} Months`
                                    td=val.instructor
                                    td=val.discount_price
                                        span.text-muted.small=val.price 
                                    td=val.description
                                    td=val.category_id.cat_title
                                    td 
                                        a.btn.btn-danger(href="")
                                            i.bi.bi-trash-fill 