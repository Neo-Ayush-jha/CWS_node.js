extend base.pug
block content 
    .container
        .row
            .col-8 
                h4.mt-1.mx-auto Insert Course
            .col-4 
                a.btn.btn-warning.float-end(href="",data-bs-toggle="modal",data-bs-target="#insertCat") Create new Category 
            .col-8 
                .card.border-white.border-3
                    .card-body 
                        table.table 
                            tr 
                                th Name
                                th Duration
                                th Instructor
                                th Fee
                                th Description
                                th category
                                th Action
                            each val in courses 
                                tr 
                                    td=val.title
                                    td=`${val.duration} Months`
                                    td=val.instructor
                                    td=val.discount_price
                                        span.text-muted.small=val.price 
                                    td=val.description
                                    td=val.category_id.cat_title
                                    td 
                                        a.btn.btn-danger(href="")
                                            i.bi.bi-trash-fill 
            .col-4 
                .card.mt-2 
                    .card-body
                        form(action="",method="post")
                            .row 
                                .mb-3.col 
                                    label(for="") Course name 
                                    input.form-control(type="text",name="name")
                                .mb-3.col 
                                    label(for="") Instructor name 
                                    input.form-control(type="text",name="instructor")
                            .mb-3.col 
                                label(for="") Duration
                                input.form-control(type="text",name="duration")
                            .row 
                                .mb-3.col 
                                    label(for="") Price
                                    input.form-control(type="text",name="price")
                                .mb-3.col 
                                    label(for="") Discount Price
                                    input.form-control(type="text",name="discount_price")
                            .mb-3 
                                label(for="") Category
                                select.form-select(name="category_id")
                                    each x in category
                                        option(value=`${x._id}`)=x.cat_title 
                                a.text-danger.text-decoration-none(href="",data-bs-toggle="modal",data-bs-target="#insertCat") Create new Category
                            .mb-3 
                                label(for="") Description
                                textarea.form-control(name="description" ,rows="4")
                            .mb-3.text-center
                                input.btn.btn-success.w-50(type="submit", value="Insert Courses")  
    .modal.fade#insertCat
        .modal-dialog 
            .modal-content 
                .modal-header 
                    h6 Insert Category Here 
                .modal-body 
                    form(action="/admin/insert-course-category",method="post")
                        .mb-3 
                            label(for="") Name 
                            input.form-control(type="text",name="cat_title")
                        .mb-3 
                            label(for="") description
                            textarea.form-control(name="cat_description")
                        .mb-3 
                            input.btn.btn-success(type="submit",value="Insert Category")